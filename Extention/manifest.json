{
  "manifest_version": 3,
  "name": "Universal Popup Browser",
  "version": "2.0",
  "description": "Open a small popup window with any URL.",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+Y"
      },
      "description": "Open the extension popup"
    }
  }
}
